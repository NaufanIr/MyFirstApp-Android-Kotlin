<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginVertical="5dp"
    card_view:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_heroes"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/yellow_700"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/tv_heroes_name"
            android:layout_toEndOf="@id/img_heroes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_heroes"
            card_view:layout_constraintTop_toTopOf="@+id/img_heroes"
            tools:text="@string/heroes_name" />

        <TextView
            android:id="@+id/tv_heros_desc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lineHeight="25dp"
            android:maxLines="2"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_heroes"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_heroes_name"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/tv_heroes_name"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_heroes_name"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="@string/heroes_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>